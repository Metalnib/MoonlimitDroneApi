{
        "Authentication": {
        "UseIdentityServer4": false, //False = use embeded JWT authentication / True = Use Identity Server 4
        "IdentityServer4IP": "http://localhost:5000" //For test environment"
         },
	"ConnectionStrings": {        
        "UseMigrationService": true,
        "UseSeedService": true,
        "UseInMemoryDatabase": false,
        "Moonlimit.DroneAPIDB": "Data Source=tcp:myexternal.database.windows;Initial Catalog=Moonlimit.DroneAPI;Persist Security Info=False;User ID=myuser;Password=mypassword"
    },
    "Exception": {        
        "ThrowExceptionAfterLog": true
    },    
    //"Logging": {
    //    "IncludeScopes": false,
    //    "Debug": {
    //        "LogLevel": {
    //            "Default": "Warning"
    //        }
    //    },
    //    "Console": {
    //        "LogLevel": {
    //            "Default": "Debug"
    //        }
    //    }
    //},
    "Serilog": {
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "===> {Timestamp:HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "RollingFile",
                "Args": {
                    "pathFormat": "logs/Moonlimit.DroneAPI-API-{Date}.txt",
                    "outputTemplate": "===> {Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Loggly"
            }
        ],
        "UseLoggly":  false,
        "Loggly":
        {
            "ApplicationName": "Moonlimit.DroneAPI",
            "Account": "yourLogglyAccount",
            "Username": "YourLogglyUserName",
            //"Password": "lalala",
            //"EndpointPort": "443",
            "IsEnabled": "true",
            "ThrowExceptions": "true",
            "LogTransport": "Https",
            "EndpointHostname": "logs-01.loggly.com",
            "CustomerToken": "1aa11a1a1-aa11-aa11-a11a-1a1aaa111a1a"  //Loggly account customer token
        }
    },
    "Jwt": {
        "Key": "12345678910111213141516",
        "Issuer": "http://localhost:44342/"
    }
}
